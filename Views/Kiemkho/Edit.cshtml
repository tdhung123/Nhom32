@model btl_nhom32.Models.Kiemkho

@{
    ViewData["Title"] = "Edit";
}

<h1>Bạn có chắc muốn sửa</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idkk" />
            <div class="form-group">
                <label asp-for="Ngaykk" class="control-label"></label>
                <input asp-for="Ngaykk" class="form-control" />
                <span asp-validation-for="Ngaykk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mahh" class="control-label"></label>
                <select asp-for="Mahh" class="form-control" asp-items="ViewBag.Mahh"></select>
                <span asp-validation-for="Mahh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Makho" class="control-label"></label>
                <select asp-for="Makho" class="form-control" asp-items="ViewBag.Makho"></select>
                <span asp-validation-for="Makho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sluongkk" class="control-label"></label>
                <input asp-for="Sluongkk" class="form-control" />
                <span asp-validation-for="Sluongkk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về lại bảng kiểm kho</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

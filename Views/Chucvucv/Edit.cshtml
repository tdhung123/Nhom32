@model btl_nhom32.Models.Chucvucv

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>

<h4>Chức vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idcv" />
            <div class="form-group">
                <label asp-for="Tencv" class="control-label"></label>
                <input asp-for="Tencv" class="form-control" />
                <span asp-validation-for="Tencv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motacn" class="control-label"></label>
                <input asp-for="Motacn" class="form-control" />
                <span asp-validation-for="Motacn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng chức vụ</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

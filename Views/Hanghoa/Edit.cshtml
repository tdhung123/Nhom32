@model btl_nhom32.Models.Hanghoa

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mahh" />
            <div class="form-group">
                <label asp-for="Tenhh" class="control-label"></label>
                <input asp-for="Tenhh" class="form-control" />
                <span asp-validation-for="Tenhh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenth" class="control-label"></label>
                <select asp-for="Tenth" class="form-control" asp-items="ViewBag.Tenth"></select>
                <span asp-validation-for="Tenth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dvtinh" class="control-label"></label>
                <input asp-for="Dvtinh" class="form-control" />
                <span asp-validation-for="Dvtinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gvhh" class="control-label"></label>
                <input asp-for="gvhh" class="form-control" />
                <span asp-validation-for="gvhh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gbhh" class="control-label"></label>
                <input asp-for="gbhh" class="form-control" />
                <span asp-validation-for="gbhh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng hàng hoá</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model btl_nhom32.Models.Nhacungcap

@{
    ViewData["Title"] = "Edit";
}

<h1>Bạn có chắc muốn sửa bảng này</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mancc" />
            <div class="form-group">
                <label asp-for="Tenncc" class="control-label"></label>
                <input asp-for="Tenncc" class="form-control" />
                <span asp-validation-for="Tenncc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachincc" class="control-label"></label>
                <input asp-for="Diachincc" class="form-control" />
                <span asp-validation-for="Diachincc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdtncc" class="control-label"></label>
                <input asp-for="Sdtncc" class="form-control" />
                <span asp-validation-for="Sdtncc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emailncc" class="control-label"></label>
                <input asp-for="Emailncc" class="form-control" />
                <span asp-validation-for="Emailncc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ngayncc" class="control-label"></label>
                <input asp-for="ngayncc" class="form-control" />
                <span asp-validation-for="ngayncc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về lại bảng nhà cung cấp</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
